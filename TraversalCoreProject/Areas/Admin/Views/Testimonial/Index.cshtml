@using DTOLayer.DTOs.TestimanialDTOs
@model List<TestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card-header bg-white">
    <h3 class="mb-0 fw-bold text-primary">
        Referanslarımız
    </h3>
</div>
<div class="card shadow-sm border-0 rounded-3">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">#</th>
                        <th class="text-start">Görsel</th>
                        <th class="text-center">Ad Soyad</th>
                        <th class="text-center">Açıklama</th>
                        <th class="text-center">Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td class="text-center">
                                @count
                            </td>
                            <td class="text-start">
                                <img src="@item.ClientImage" height="50" width="50" class="rounded-circle" />
                            </td>
                            <td class="text-center">
                                <i class="bi bi-people text-primary me-1"></i>
                                @item.Client
                            </td>
                            <td class="text-center">
                                <i class="bi bi-geo-alt text-primary me-1"></i>
                                @item.Comment.Substring(0,80)...
                            </td>

                            <td class="text-center">
                                <a href="/Admin/Testimonial/ChangeStatus/@item.TestimonialId" class="btn @(item.Status ? "btn-danger" : "btn-success") ms-2" title="Durumu Değiştir">
                                    @(item.Status ? "Pasif Yap" : "Aktif Yap")
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

