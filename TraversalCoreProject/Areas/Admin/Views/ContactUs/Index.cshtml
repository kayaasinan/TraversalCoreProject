@model List<ContactUsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card-header bg-white">
    <h3 class="mb-0 fw-bold text-primary">
        Gelen Mesajlar
    </h3>
</div>
<div class="card shadow-sm border-0 rounded-3">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">#</th>
                        <th class="text-start">Gönderen</th>
                        <th class="text-start">Konu</th>
                        <th class="text-start">İçerik</th>
                        <th class="text-start">Tarih</th>
                        <th class="text-center">Mesajı Aç</th>
                        <th class="text-center">Sil</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th class="text-center">
                                @count
                            </th>
                            <td class="text-start">
                                <i class="bi bi-person-fill text-primary me-1"></i>
                                @item.Name
                            </td>
                            <td class="text-start">
                                <i class="bi bi-chat-dots-fill text-warning me-1"></i>
                                @item.Subject
                            </td>
                            <td class="text-start">
                                <i class="bi bi-file-text-fill text-danger me-1"></i>
                                @((item.Body?.Length > 50 ? item.Body.Substring(0, 50) + "..." : item.Body))
                            </td>
                            <td class="text-start">
                                @item.Date.ToString("dd.MM.yyyy")
                            </td>
                            <td class="text-center">
                                <a href="/Admin/ContactUs/MessageDetails/@item.ContactUsId" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-envelope-open-fill me-1"></i>
                                    Mesajı Aç
                                </a>
                            </td>
                            <td class="text-center">
                                <a href="/Admin/ContactUs/ChangeStatus/@item.ContactUsId" class="btn @(item.Status ? "btn-outline-danger" : "btn-outline-success") ms-2" title="Durumu Değiştir">
                                    @(item.Status ? "Pasif Yap" : "Aktif Yap")
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


