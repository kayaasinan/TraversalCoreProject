@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

@if (Model == null || !Model.Any())
{
    @await Component.InvokeAsync("_AdminLayoutEmptyPageComponent")
}
else
{
<div class="card-header bg-white">
    <h3 class="mb-0 fw-bold text-primary">
        Rol Listesi
    </h3>
</div>
<div class="card shadow-sm border-0 rounded-3">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">#</th>
                        <th class="text-start">Rol Adı</th>           
                        <th class="text-center">Güncelle</th>
                        <th class="text-center">Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th class="text-center">
                                @count
                            </th>
                            <td class="text-start">
                                <i class="bi bi-person-fill text-primary me-1"></i>
                                @item.Name
                            </td>
                            <td class="text-center">
                                <a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-primary" title="Güncelle">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </td>
                            <td class="text-center">
                                <button type="button" onclick="confirmDelete('/Admin/Role/DeleteRole/@item.Id')" class="btn btn-danger"><i class="bi bi-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
}
<br />
<a href="/Admin/Role/AddRole" class="btn btn-outline-primary">Yeni Rol Ekle</a>

