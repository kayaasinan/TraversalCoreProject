@using DTOLayer.DTOs.MailDTOs
@model MailRequestDTO
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm border-0 rounded-3">
    <div class="card-header bg-white">
        <h3 class="fw-bold text-primary mb-0">
            <i class="bi bi-envelope-fill me-2"></i> Mail Gönder
        </h3>
    </div>

    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Alıcı Mail</label>
                <input asp-for="ReceiverMail" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Konu</label>
                <input asp-for="Subject" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Mesaj</label>
                <textarea asp-for="Body" class="form-control" rows="8"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success mt-3">@ViewBag.Message</div>
        }
    </div>
</div>

