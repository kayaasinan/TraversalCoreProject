
@model AccountDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header bg-white">
    <h3 class="mb-0 fw-bold text-primary">
        Unit Of Work Para Transferi
    </h3>
</div>

<form method="post">
    <div class="form-group mb-3">
        <label>Gönderen</label>
        <select asp-for="SenderId" asp-items="ViewBag.SenderList" class="form-select">
            <option value="">-- Gönderen Hesap Seçin --</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Alıcı</label>
        <select asp-for="ReceiverId" asp-items="ViewBag.ReceiverList" class="form-select">
            <option value="">-- Alıcı Hesap Seçin --</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Miktar</label>
        <input type="number" asp-for="Amount" class="form-control" placeholder="Transfer edilecek tutar" />
    </div>

    <button class="btn btn-outline-warning w-100">Hesaba Aktar</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success text-center mt-3">
        @ViewBag.Message
    </div>
}

