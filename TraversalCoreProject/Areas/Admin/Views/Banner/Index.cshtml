@using DTOLayer.DTOs.FeatureDTOs
@model List<FeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header bg-white">
    <h3 class="mb-0 fw-bold text-primary">
        Turlardan Öne Çıkanlar
    </h3>
    <h6 class="mb-0 fw-bold text-black mt-2">
        Öne Çıkanlar sayfasında, en çok beğenilen ve ilgi gören destinasyonları keşfedebilirsiniz. Popüler rotalar, unutulmaz deneyimler ve gezginlerin favori durakları burada sizi bekliyor. Yeni yerler keşfetmeden önce ilham almak için harika bir başlangıç noktası!
    </h6>
</div>

<div class="best-rooms py-4">
    <div class="container py-md-4">
        <div class="ban-content-inf row">
            <div class="maghny-gd-1 col-lg-6 d-flex flex-column">
                <div class="maghny-grid mb-4">
                    <figure class="effect-lily border-radius m-0">
                        <img class="img-fluid" src="@Model.FirstOrDefault()?.Image" alt="" />
                    </figure>
                </div>
            </div>
       
            <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                <div class="row">
                    @foreach (var item in Model.Skip(1).Take(4))
                    {
                        <div class="col-6 mb-1">
                            <div class="maghny-grid">
                                <figure class="effect-lily border-radius">
                                    <a asp-controller="Destination" asp-action="Index">
                                        <img class="img-fluid" src="@item.Image" alt="@item.Title" />
                                    </a>
                                </figure>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>



