@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header bg-white">
    <h3 class="mb-0 fw-bold text-primary">
        Aktif Tur Rotalarımız
    </h3>
</div>
<div class="card shadow-sm border-0 rounded-3">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">#</th>
                        <th class="text-start">Şehir</th>
                        <th class="text-center">Kapasite</th>
                        <th class="text-center">Fiyat</th>
                        <th class="text-center">Sitede Gör</th>
                        <th class="text-center">Sil</th>
                        <th class="text-center">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <i class="bi bi-hash text-secondary me-1"></i>
                                @item.DestinationId
                            </td>
                            <td class="text-start">
                                <i class="bi bi-geo-alt text-danger me-1"></i>
                                @item.City
                            </td>
                            <td class="text-center">
                                <i class="bi bi-people text-primary me-1"></i>
                                @item.Capacity
                            </td>
                            <td class="text-center">
                                <i class="bi bi-cash-stack text-success me-1"></i>
                                <span class="badge bg-success">@item.Price ₺</span>
                            </td>
                            <td class="text-center">
                                <a href="/Destination/DestinationDetails/@item.DestinationId" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-eye"></i> Görüntüle
                                </a>
                            <td class="text-center">
                                <a href="/Admin/Destination/DeleteDestination/@item.DestinationId" class="btn btn-sm btn-outline-danger" title="Sil">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                            <td class="text-center">
                                <a href="/Admin/Destination/UpdateDestination/@item.DestinationId" class="btn btn-sm btn-outline-primary" title="Güncelle">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />
<a href="/Admin/Destination/AddDestination" class="btn btn-outline-primary">Yeni Rota Ekle</a>

