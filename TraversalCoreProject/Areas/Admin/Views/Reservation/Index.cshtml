
@model List<ReservationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-calendar-check me-2"></i> Rezervasyon Listesi
                    </h5>
                    <small class="text-muted">Tüm Kullanıcı Rezervasyonları</small>
                </div>

                <div class="card-body p-0">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-secondary">
                            <tr>
                                <th>Kullanıcı</th>
                                <th>Rota</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody class="text-start">
                            @foreach (var item in Model)
                            {
                                string statusClass = item.Status switch
                                {
                                    "Onaylandi" => "text-success fw-semibold",
                                    "OnayBekliyor" => "text-warning fw-semibold",
                                    "IptalEdildi" => "text-danger fw-semibold",
                                    "GeçmişRezervasyon" => "text-secondary fw-semibold",
                                    _ => "text-muted"
                                };
                                <tr>
                                    <td>
                                        @item.AppUser.Name @item.AppUser.SurName
                                    </td>
                                    <td>
                                        @item.Destination.City
                                    </td>
                                    <td>@item.ReservationDate.ToShortDateString()</td>
                                    <td class="@statusClass">
                                        <i class="bi bi-circle-fill me-1"></i> @item.Status
                                    </td>
                                    <td>
                                        <form asp-action="ChangeStatus" method="post" class="d-flex justify-content-center align-items-center gap-2">
                                            <input type="hidden" name="id" value="@item.ReservationId" />
                                            <select name="status" class="form-select form-select-sm w-auto">
                                                @foreach (var status in Enum.GetValues(typeof(ReservationStatus)).Cast<ReservationStatus>().Where(s => s != ReservationStatus.Tamamlandi))
                                                {
                                                    <option value="@status" selected="@(item.Status == status.ToString())">@status</option>
                                                }
                                            </select>
                                            <button type="submit" class="btn btn-sm btn-primary">
                                                <i class="bi bi-arrow-repeat"></i> Güncelle
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

