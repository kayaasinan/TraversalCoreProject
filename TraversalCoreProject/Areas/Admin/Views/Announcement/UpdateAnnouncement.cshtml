@model AnnouncementDto
@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header bg-white">
    <h3 class="mb-0 fw-bold text-primary">
        Yeni Duyuru Oluşturma Sayfası
    </h3>
</div>
<form method="post">
    <input type="hidden" asp-for="AnnouncementId" />
    <div class="form-group">
        @Html.Label("Başlık")
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        @Html.Label("İçerik")
        <textarea cols="30" rows="5" asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>
</form>


