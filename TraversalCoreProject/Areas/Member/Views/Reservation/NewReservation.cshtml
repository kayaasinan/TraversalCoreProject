@model ReservationDto
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Rezervasyon Oluşturma Sayfası</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<form method="post">
    <div class="form-group">
        @Html.Label("Lokasyon")
        @Html.DropDownListFor(x => x.DestinationId, (List<SelectListItem>)ViewBag.List, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Kişi Sayısı")
        <input type="number" asp-for="NumberOfPeople" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Tarih")
        <input type="date" asp-for="ReservationDate" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Notlar")
        <textarea asp-for="Notes" class="form-control" rows="8"></textarea>
    </div>
    <button class="btn btn-outline-primary">Rezervasyon Yap</button>
</form>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        Swal.fire({
            title: "Bilgilendirme",
            text: "Rezervasyonunuz başlangıçta 'onay bekliyor' durumunda alınacaktır. Onay sürecini takip etmek için 'Güncel Rezervasyonlarım' menüsünü kontrol etmeyi unutmayın..!",
            icon: "info",
            confirmButtonText: "Tamam",
            confirmButtonColor: "#0d6efd"
        });
    });
</script>