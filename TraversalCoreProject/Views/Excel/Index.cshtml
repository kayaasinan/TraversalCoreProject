
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card shadow-sm border-0 rounded-3">
    <div class="card-header bg-white border-0 pb-0">
        <h3 class="fw-bold text-primary mb-0">
            <i class="bi bi-file-earmark-excel-fill me-2 text-success"></i>
            Excel Rapor Oluşturma
        </h3>
        <p class="text-muted small mt-1 mb-0">
            Aşağıdaki seçeneklerden ihtiyacınıza göre Excel raporu oluşturabilirsiniz.
        </p>
        <div class="mt-3"></div>
    </div>

    <div class="card-body">
        <div class="row g-4">

  
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100 hover-shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-file-earmark-bar-graph text-info display-4 mb-3"></i>
                        <h5 class="fw-bold text-dark">Statik Excel Raporu</h5>
                        <p class="text-muted small mb-3">
                            Önceden tanımlı örnek verilerle test amaçlı Excel dosyası oluşturur.
                        </p>
                        <a href="/Excel/StaticExcelReport/" class="btn btn-outline-info w-100">
                            <i class="bi bi-download me-1"></i> Raporu İndir
                        </a>
                    </div>
                </div>
            </div>

      
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100 hover-shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-map text-success display-4 mb-3"></i>
                        <h5 class="fw-bold text-dark">Tur Rotaları Raporu</h5>
                        <p class="text-muted small mb-3">
                            Tüm tur destinasyonlarını Excel dosyası olarak dışa aktarır.
                        </p>
                        <a href="/Excel/DestinationExcelReport/" class="btn btn-outline-success w-100">
                            <i class="bi bi-file-earmark-excel me-1"></i> Raporu İndir
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



