@model List<Feature>
<div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">
            <div class="maghny-gd-1 col-lg-6 d-flex flex-column">
                <div class="maghny-grid mb-4">
                    <figure class="effect-lily border-radius m-0">
                        <img class="img-fluid" src="@Model.FirstOrDefault()?.Image" alt="" />
                        <figcaption>
                            <div>
                                <h4>@Model.FirstOrDefault()?.Title</h4>
                                <p>From @Model.FirstOrDefault()?.Description$</p>
                            </div>
                        </figcaption>
                    </figure>
                </div>
            </div>
       
            <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                <div class="row">
                    @foreach (var item in Model.Skip(1).Take(4))
                    {
                        <div class="col-6 mb-4">
                            <div class="maghny-grid">
                                <figure class="effect-lily border-radius">
                                    <img class="img-fluid" src="@item.Image" alt="" />
                                    <figcaption>
                                        <div>
                                            <h4>@item.Title</h4>
                                            <p>From @item.Description$</p>
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
