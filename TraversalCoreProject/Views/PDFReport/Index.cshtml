
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm border-0 rounded-3">
    <div class="card-header bg-white border-0 pb-0">
        <h3 class="fw-bold text-primary mb-0">
            <i class="bi bi-file-earmark-pdf-fill me-2 text-danger"></i>
            PDF Rapor Oluşturma
        </h3>
        <p class="text-muted small mt-1 mb-0">
            Aşağıdaki seçeneklerden ihtiyacınıza göre PDF raporu oluşturabilirsiniz.
        </p>
        <div class="mt-3"></div>
    </div>

    <div class="card-body">
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100 hover-shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-file-earmark-text text-danger display-4 mb-3"></i>
                        <h5 class="fw-bold text-dark">Statik PDF Raporu</h5>
                        <p class="text-muted small mb-3">
                            Önceden tanımlı örnek içerikle test amaçlı PDF dosyası oluşturur.
                        </p>
                        <a href="/PDFReport/StaticPdfReport/" class="btn btn-outline-danger w-100">
                            <i class="bi bi-download me-1"></i> Raporu İndir
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100 hover-shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-people text-primary display-4 mb-3"></i>
                        <h5 class="fw-bold text-dark">Rezervasyon PDF Raporu</h5>
                        <p class="text-muted small mb-3">
                            Veritabanındaki rezervasyon kayıtlarını dinamik olarak PDF'e aktarır.
                        </p>
                        <a href="/PDFReport/DynamicReservationReport/" class="btn btn-outline-primary w-100">
                            <i class="bi bi-file-earmark-pdf me-1"></i> Raporu İndir
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

